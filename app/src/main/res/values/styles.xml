<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--<item name="colorAccent">@color/accent</item>-->
        <!--<item name="android:textColorPrimary">@color/primary_text</item>-->
        <!--<item name="android:textColorSecondary">@color/secondary_text</item>-->
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
        <!--<item name="android:windowBackground">@color/window_background</item>-->


        <!-- menu text style -->
        <item name="android:actionMenuTextAppearance">@style/ActionBar.MenuTextStyle</item>
        <item name="android:actionMenuTextColor">#FFFFFF</item>

    </style>

    <!-- toolbar and title  -->
    <style name="ToolBarStyle" parent="ToolBarStyle.Base"/>

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/toobar_text_size</item>
        <item name="android:fontFamily">sans-serif-thin-black</item>
    </style>

    <!-- menu style -->
    <style name="ActionBar.MenuTextStyle"
        parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <!--<item name="android:textColor">@color/blue</item>-->

        <item name="android:textSize">@dimen/toobar_text_size</item>
        <item name="android:fontFamily">sans-serif-thin-black</item>
    </style>

    <!-- nota detail label -->
    <style name="LabelTextViewStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textSize">@dimen/label_text_size</item>
    </style>
    <!-- nota detail content -->
    <style name="ContentTextViewStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">sans-serif-thin-black</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:padding">@dimen/content_padding</item>
        <item name="android:gravity">top|left</item>
        <item name="android:ellipsize">start</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/content_background_style</item>

    </style>
</resources>
